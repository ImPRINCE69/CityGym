<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Incline_dumbellpress"
    android:background="#000000">

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/gif1"
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:background="@drawable/inclinegif" />

    <TextView
        android:layout_below="@id/gif1"
        android:id="@+id/text1"
        android:layout_above="@id/text2"
        android:background="#3D3434"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="364dp"
        android:gravity="center"
        android:text="Incline-Dumbell press *6"
        android:textColor="#FFC107"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:layout_above="@id/text2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="7dp"
        android:text="*      Lie back on an incline bench with a dumbbell in each hand atop your thighs.\n
*      The palms of your hands will be facing each other.\n
*      Then, using your thighs to help push the dumbbells up, lift the dumbbells one at a time so that you can hold them at shoulder width."
        android:textColor="#FFC107"
        android:textSize="22dp" />


</RelativeLayout>